<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Brand identification</th>
      <th>Breed</th>
      <th>Branded</th>
      <th>Date of birth</th>
      <th>Date of purchase</th>
      <th>Gender</th>
      <th>Country of birth</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.brand_identification %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.branded %></td>
        <td><%= animal.date_of_birth %></td>
        <td><%= animal.date_of_purchase %></td>
        <td><%= animal.gender %></td>
        <td><%= animal.country_of_birth %></td>
        <td><%= animal.status %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

